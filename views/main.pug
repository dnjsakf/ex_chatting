doctype html
html
  head
    meta(charset='utf-8')
    style.
      @media screen and (min-width: 480px) {
        body {
          background-color: lightyellow;
          width: 90vw;
          height: 90vh;
          margin: 0 auto;
          border: groove black;
        }
        #frame{
          margin: 0 auto;
          width:50%;
          height:50%;
          border:solid 1px;
        }
        #logo_img, #logo_frame, #form{
          width:100%;
          height:100%;
        }
      }
    
  body
    div#frame
      div#logo_frame
        img#logo_img(src='/logo.png')
      ul
        -for(var i=1; i <=5; i++)
          -var url = '/robby/'+i
          -var text = 'robby('+i+')'
          li
            a(href=url)
              =text
        
          
      
    
